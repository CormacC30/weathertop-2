{{#each stations}}
<div class="box box-link-hover-shadow">
  <h2 class="title">
    Station Name: {{name}}
  </h2>
  <h2 class="title">
    Latitude: {{latitude}} (&degN)
  </h2>
    <h2 class="title">
    Longitude: {{longitude}} (&degW)
  </h2>

  <h2>Latest Reading:</h2>
{{>weather-report}}

  <a href="/station/{{_id}}" class="button">
  {{>icons/open}}
  </a>
  <a href="/dashboard/deletestation/{{_id}}" class="button">
  {{>icons/delete}}
  </a>
</div>
{{/each}}