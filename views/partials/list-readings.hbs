<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Weather Code</th>
      <th>Temperature (&degC)</th>
      <th>(&degF)</th>
      <th>Wind Speed (km/h)</th>
      <th>(Bft)</th>
      <th>Wind Direction (&degN)</th>
      <th>Pressure (hPa)</th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
    <tr>
      <td>
        {{code}}
      </td>
      <td>
        {{temperature}}
      </td>
      <td>
        {{fahrenheit}}
      </td>
      <td>
        {{windspeed}}
      </td>
      <td>
        {{beaufort}}
      </td>
      <td>
        {{winddirection}}
      </td>
      <td>
        {{pressure}}
      </td>
      <td>
        <a href="/station/{{../station._id}}/deletereading/{{_id}}" class="button">
        {{>icons/delete}}
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
