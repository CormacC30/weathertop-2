<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Weather Code</th>
      <th>Temperature (&degC)</th>
      <th>(&degF)</th>
      <th>Feels Like (&degC)</th>
      <th>Wind Speed (km/h)</th>
      <th>(Bft)</th>
      <th>Wind Direction (&deg)</th>
      <th>Pressure (hPa)</th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
    <tr>
      <td>
        {{code}}
        <br>
        <p class="icon"><i class="{{weatherIcon code}}"></i></p>
      </td>
      <td>
        {{temperature}}
      </td>
      <td>
        {{celciusToFahrenheit temperature}}
      </td>
      <td>
        {{windChill temperature windspeed}}
      </td>
      <td>
        {{windspeed}}
      </td>
      <td>
        {{beaufort windspeed}}
      </td>
      <td>
        {{winddirection}}
      <br>
        {{degreesToCompass winddirection}}
      </td>
      <td>
        {{pressure}}
      </td>
      <td>
        <a href="/station/{{../station._id}}/deletereading/{{_id}}" class="button">
        {{>icons/delete}}
        </a>
      </td>
      <td>
        <a href="/station/{{../station._id}}/editreading/{{_id}}" class="button">
        {{>icons/edit}}
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
