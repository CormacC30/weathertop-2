<div class="box">
  <h3 class="is-size-4">Generate Latest Weather Report</h3><br>
  <form action="/station/{{station._id}}/addreport" method="POST">
    <div class="field is-grouped">
      <button class="button is-danger">Auto-Generate Report</button>
    </div>
  </form>

  <form class="box" action="/station/{{station._id}}/addreading" method="POST">
    <label>Enter Reading:</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <label class="label">Code</label>
          <div class="control">
            <div class="select is-fullwidth">
              <select name="code">
                <option>Select Code</option>
                <option value="100">100 - Clear</option>
                <option value="200">200 - Partial Clouds</option>
                <option value="300">300 - Cloudy (fog, mist, etc.)</option>
                <option value="400">400 - Light Showers (drizzle)</option>
                <option value="500">500 - Heavy Showers (rain)</option>
                <option value="600">600 - Rain</option>
                <option value="700">700 - Snow</option>
                <option value="800">800 - Thunderstorm</option>
              </select>
            </div>
          </div>

        </div>
        <div class="field">
          <label class="label">Temperature (&degC)</label>
          <input class="input" type="text" placeholder="Enter Temperature" name="temperature">
        </div>
        <div class="field">
          <label class="label">Wind Speed (km/h)</label>
          <input class="input" type="text" placeholder="Enter Wind Speed" name="windspeed">
        </div>
        <div class="field">
          <label class="label">Wind Direction (&deg)</label>
          <input class="input" type="text" placeholder="Enter Wind Direction" name="winddirection">
        </div>
        <div class="field">
          <label class="label">Pressure (hPa)</label>
          <input class="input" type="text" placeholder="Enter Pressure" name="pressure">
        </div>
      </div>
    </div>
    <button class="button is-primary">Add Reading</button>
  </form>
</div>