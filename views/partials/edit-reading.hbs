<form class="box" action="/station/{{station._id}}/updatereading/{{reading._id}}" method="POST">
  <label>Reading Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Weather Code" name="code" value="{{reading.code}}">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Temperature" name="temperature" value="{{reading.temperature}}">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Wind Speed" name="windspeed" value="{{reading.windspeed}}">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Wind Direction" name="winddirection" value="{{reading.winddirection}}">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Pressure" name="pressure" value="{{reading.pressure}}">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update Reading</button>
</form>
